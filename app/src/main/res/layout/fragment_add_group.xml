<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.josiah.stockplayground.AddGroupFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/group_add_name"
        android:layout_width="242dp"
        android:layout_height="58dp"
        android:hint="Group Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp" />

    <EditText
        android:id="@+id/group_add_portfolio_value"
        android:inputType="number"
        android:layout_width="242dp"
        android:layout_height="48dp"
        android:hint="Portfolio Value"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/group_add_name" />


    <Button
        android:id="@+id/add_new_group_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:onClick="addCourse"
        android:text="Add Course"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/group_add_portfolio_value" />

</android.support.constraint.ConstraintLayout>
